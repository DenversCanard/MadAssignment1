<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyDiscord"
    tools:context=".GameScores">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <!-- Back button -->
        <Button
            android:id="@+id/scoreBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_blue_button"
            android:text="back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </Button>

        <!-- Guideline - middle line -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <!-- Guideline -score line-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <!-- player 1 - column -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player1column"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline1"
            app:layout_constraintStart_toStartOf="parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <!-- crown -->
                <ImageView
                    android:id="@+id/crownP1"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/crown"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">

                </ImageView>
                <!-- player icon -->
                <ImageView
                    android:id="@+id/iconP1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                </ImageView>

                <!-- player 1 - name -->
                <TextView
                    android:id="@+id/Player1Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PLAYER NAME"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/P1subtext">
                </TextView>

                <!-- player 1 - text -->
                <TextView
                    android:id="@+id/P1subtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textAlignment="center"
                    android:textColor="@color/defaultBlue"
                    android:textSize="17dp">
                </TextView>

                <!-- player 1 - points -->
                <TextView
                    android:id="@+id/P1Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="60dp">
                </TextView>

                <TextView
                    android:id="@+id/winsTotal1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="wins out of 0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp">
                </TextView>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- player 2 - column -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player2column"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <!-- crown -->
                <ImageView
                    android:id="@+id/crownP2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/crown"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">

                </ImageView>
                <!-- player icon -->
                <ImageView
                    android:id="@+id/iconP2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                </ImageView>

                <!-- player 1 - name -->
                <TextView
                    android:id="@+id/Player2Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="PLAYER NAME"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/P1subtext">
                </TextView>

                <!-- player 1 - text -->
                <TextView
                    android:id="@+id/P2subtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/defaultBlue"
                    android:text="Player 2"
                    android:textAlignment="center"
                    android:textSize="17dp">
                </TextView>

                <!-- player 1 - points -->
                <TextView
                    android:id="@+id/P2Score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="60dp">
                </TextView>

                <TextView
                    android:id="@+id/winsTotal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="wins out of 0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp">
                </TextView>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  score summary -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreRounds"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline2">

            <!-- Guideline -score line-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineR2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />


            <!-- Vertical guidelines - points -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <!--     Rounds 1-5 text     -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Losses"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/defaultBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ties"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/defaultBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidelineR2">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win %"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/defaultBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidelineR3">
            </TextView>


            <!-- Win loss images P1 -->
            <TextView
                android:id="@+id/lossesP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@id/guidelineP1"
                app:layout_constraintStart_toStartOf="@id/guidelineP1"
                app:layout_constraintTop_toTopOf="parent"
                >
            </TextView>
            <TextView
                android:id="@+id/tiesP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="0"

                app:layout_constraintEnd_toStartOf="@id/guidelineP1"
                app:layout_constraintStart_toStartOf="@id/guidelineP1"
                app:layout_constraintTop_toTopOf="@id/guidelineR2"
                >
            </TextView>
            <TextView
                android:id="@+id/winPercentP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@id/guidelineP1"
                app:layout_constraintStart_toStartOf="@id/guidelineP1"
                app:layout_constraintTop_toTopOf="@id/guidelineR3">
            </TextView>


            <!-- Win loss images P2 -->

            <TextView
                android:id="@+id/lossesP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@id/guidelineP2"
                app:layout_constraintStart_toStartOf="@id/guidelineP2"
                app:layout_constraintTop_toTopOf="parent"
                >
            </TextView>
            <TextView
                android:id="@+id/tiesP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@id/guidelineP2"
                app:layout_constraintStart_toStartOf="@id/guidelineP2"
                app:layout_constraintTop_toTopOf="@id/guidelineR2"
                >
            </TextView>
            <TextView
                android:id="@+id/winPercentP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@id/guidelineP2"
                app:layout_constraintStart_toStartOf="@id/guidelineP2"
                app:layout_constraintTop_toTopOf="@id/guidelineR3">
            </TextView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.constraintlayout.widget.ConstraintLayout>